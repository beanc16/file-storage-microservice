{
  "name": "file-storage-microservice",
  "version": "1.3.1",
  "description": "A microservice for storing files in the Cloud",
  "main": "dist/index.js",
  "types": "dist/types/index.d.ts",
  "scripts": {
    "build": "rm -rf dist && tsc",
    "start": "npm run build && node dist/index.js",
    "start:dev": "node --loader ts-node/esm --watch src/index.js",
    "start-test-server": "nodemon src/test/testServer.js",
    "lint": "eslint --cache --ext js --ext ts ./",
    "lint:fix": "eslint --cache --fix --ext js --ext ts ./",
    "test": "jest --passWithNoTests --detectOpenHandles",
    "test:watch": "jest --watch",
    "preversion": "npm run lint",
    "version": "git add -A src",
    "postversion": "git push && git push --tags"
  },
  "eslintConfig": {
      "extends": "lintification"
  },
  "dependencies": {
    "@beanc16/joi-helpers": "^0.5.0",
    "@beanc16/logger": "^1.5.0",
    "@beanc16/microservices-abstraction": "^1.5.0",
    "app-root-path": "^3.0.0",
    "axios": "^1.7.9",
    "body-parser": "^1.19.1",
    "cloudinary": "^2.5.1",
    "cors": "^2.8.5",
    "dayjs": "^1.11.13",
    "dotenv": "^14.1.0",
    "dotnet-responses": "^1.8.0",
    "express": "^4.17.2",
    "image-to-uri": "^1.0.0",
    "joi": "^17.13.3",
    "mongodb": "^4.3.0",
    "mongodb-controller": "^1.6.6",
    "nodemon": "^3.1.9"
  },
  "devDependencies": {
    "@beanc16/utility-types": "^1.1.0",
    "@swc/core": "^1.10.1",
    "@swc/jest": "^0.2.37",
    "@types/jest": "^29.5.14",
    "@types/node": "^22.13.1",
    "eslint-config-lintification": "^1.0.1",
    "jest": "^29.7.0",
    "ts-jest": "^29.2.5",
    "ts-jest-resolver": "^2.0.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.7.2",
    "typescript-eslint": "8.7.0"
  }
}
